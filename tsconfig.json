{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "server.ts",
    "public/**/*.ts",
    "sockets.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}